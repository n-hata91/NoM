<!DOCTYPE html>
<html>
  <head>
    <title>NoM</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'nom.ico' %>
    <script src="https://kit.fontawesome.com/<%=ENV['FONT_AWESOME']%>.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.0.10/font-awesome-animation.css" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
  </head>
  <body>
  <div class="page-container">
    <header>
      <% if learner_user_signed_in? %>
        <%= render "learner/drawer" %>
        <%= render "learner/mobile_menu" %>
      <% elsif admin_admin_signed_in? %>
        <%= render "admin/header" %>
      <% else %>
      <% end %>
    </header>
    <%= yield %>
  </div>
  <% unless admin_admin_signed_in? %>
    <footer class="footer mt-auto py-3">
      <%= render "layouts/footer" %>
    </footer>
  <% end %>
  </body>
</html>
