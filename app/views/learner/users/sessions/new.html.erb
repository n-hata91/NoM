<div class="bg-img bg-sign_in">
  <div class="blur_filter d-flex">
    <div class="card col-lg-6 m-auto" style="background: rgba(255,255,255,0.7);">
      <div class="card-body">
        <h2 class="text-center">LOG IN</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-lg-9 mb-3 mx-auto">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-lg-9 mb-3 mx-auto">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="col-lg-9 mb-3 mx-auto text-center">
            <div class="form-check mx-auto">
              <% if devise_mapping.rememberable? %>
                <div class="field mx-auto">
                  <%= f.check_box :remember_me, class: "form-check-label" %>
                  <%= f.label :remember_me, "ログイン状態を保持しますか？" %>
                </div>
              <% end %>
            </div>
            <button class="main-btn" >ログイン</button>
          </div>
          <div class="col-lg-9 mb-3 mx-auto text-center">
            <%= render "learner/users/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>