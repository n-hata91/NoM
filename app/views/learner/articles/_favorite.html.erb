<% if article.favorited?(current_learner_user)  %>
  <%= link_to learner_favorite_path(article), method: :delete, remote: true do %>
    <i class="fas fa-bookmark faa-vertical animated-hover"></i>
  <% end %>
<% else %>
  <%= link_to learner_favorites_path(article), method: :post, remote: true do %>
    <i class="far fa-bookmark faa-vertical animated-hover"></i>
  <% end %>
<% end %>