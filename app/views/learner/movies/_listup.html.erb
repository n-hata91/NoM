<%# 映画カード %>
<% if movies %>
  <table class="table table-hover">
    <% movies.each do |movie| %>
      <tbody>
        <tr>
          <th scope="row"><%= image_tag movie.image_id, size: '70x100' %></th>
          <td class="align-middle">
            <%= link_to new_learner_movie_article_path(movie.id) do %>
              <h4 class="card-title"><%= movie.title %></h4>
            <% end %>
          </td>
          <td class="align-middle">
            <!-- モーダルボタン -->
            <% if movie.overview.present? %>
              <button type="button" class="main-btn" data-toggle="modal" data-target="#staticBackdrop_<%= movie.id %>">
                あらすじ
              </button>
            <% end %>
          </td>
          <td></td>
        </tr>
      </tbody>
      <!-- モーダル -->
      <div class="modal fade" id="staticBackdrop_<%= movie.id %>" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel"><%= movie.title %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= movie.overview %>
            </div>
            <div class="modal-footer">
              <button type="button" class="main-btn" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </table>
<% end %>

